<div class="browse-page">
    <div class="search">
        <h1 class="search__heading">Browse Projects</h1>
        <div class="search__input-container">
            <span class="search__icon">
                <img src="/img/search-4-svgrepo-com 1.svg" alt="Icon Description">
            </span>
            <input type="text" id="searchInput" class="search__input" placeholder="Search Projects">
        </div>
    </div>
