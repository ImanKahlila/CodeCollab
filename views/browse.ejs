    <div class="search-results">
        <% if (projects && projects.length> 0) { %>
            <ul id="searchResults" class="search-results__list">
                <% projects.forEach((project)=> { %>
                    <li class="search-results__card">

                        <a href="/project/<%= project._id%>" class="search-results__name">
                            <%= project.name %>
                        </a>
                        <p class="search-results__description">
                            <%= project.description %>
                        </p>
                    </li>
                    <% }); %>
            </ul>
            <% } else { %>
                <p>No projects found.</p>
                <% } %>
    </div>
</div>